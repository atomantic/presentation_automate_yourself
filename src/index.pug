            pre.line-numbers: code.language-javascript.
              var $ = function(selector){
                var query = {
                  id: document.getElementById,
                  cls: document.getElementByClassName,
                  tag: document.getElementByTagName
                }
                var type = 'tag'
                if(selector[0]==='#') type = 'id'; 
                if(selector[0]==='.') type = 'cls'; 
                return query[type](selector);
              }

          h2.foot: .mid <span class="reg z150">🤩</span>&nbsp; now: document.querySelectorAll() - <a href="http://youmightnotneedjquery.com/" target="off">no more jQuery</a>
      
